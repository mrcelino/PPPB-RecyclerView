<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Button pressed/focused state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#79D9D9D9" /> <!-- Contoh warna saat ditekan -->
            <corners android:radius="4dp" /> <!-- Bulat dengan radius 8dp -->
        </shape>
    </item>

    <!-- Default button state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D9D9D9" /> <!-- Warna default dari button -->
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>